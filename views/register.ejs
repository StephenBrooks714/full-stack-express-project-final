<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body class="user-bg">

<%- include('layouts/navBar') -%>

<main class="container" style="margin-top: 110px; margin-bottom: 70px;">
    <div class="row justify-content-center align-items-center flex-center d-flex mx-auto">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <% if(errors != null && errors.length > 0) {%>
                <ul class="list-group">
                    <% for(var i = 0; i < errors.length; i++){ %>
                        <li class="list-group-item list-group-item-danger">
                            <%= errors[i] %>
                        </li>
                    <% } %>
                </ul>
            <% } %>
            <h1 class="text-white-50">Register for an account</h1>
            <form action="/store/user" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4">
                        <label for="username" class="form-label text-white">Username</label>
                        <input type="text" name="username" id="username" class="mb-3 form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="name" class="form-label text-white">First Name</label>
                        <input type="text" name="fName" id="name" class="mb-3 form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="role" class="form-label text-white">Last Name</label>
                        <input type="text" name="lName" id="role" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label text-white">Email</label>
                        <input type="email" name="email" id="email" class="mb-3 form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="password" class="form-label text-white">Password</label>
                        <input type="password" name="password" id="password" class="mb-3 form-control">
                    </div>
                    <div class="col-md-12">
                        <label for="bio" class="form-label text-white">Bio</label>
                        <textarea name="bio" id="bio" class="form-control mb-3" rows="7"></textarea>
                    </div>
                </div>
                <p class="mb-3 text-white">Already have an account? <a href="/login" class="text-white-50">Login here</a>.</p>
                <button class="btn btn-light rounded-pill" type="submit">register for access</button>
            </form>
        </div>
    </div>
</main>

<%- include('layouts/footer') -%>

</body>
<%- include('layouts/scripts') -%>
</html>